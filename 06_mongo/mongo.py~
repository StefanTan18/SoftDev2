import pymongo

SERVER_ADDR = "104.248.49.56"
connection = pymongo.MongoClient(SERVER_ADDR)
db = connection.test
collection = db.restaurants

def findRestBorough(borough):
    restaurants = db.restaurants.find({"borough":borough})
    return restaurants

def findRestZip(zipcode):
    restaurants = db.restaurants.find({"address.zipcode":zipcode})
    return restaurants

def findRestZipGrade(zipcode, grade):
    restaurants =  db.restaurants.find({$and:[{"address.zipcode":zipcode},
                                              {"grades.grade":"A"}]})
    return restaurants

def findRestZipScore(zipcode, score):
    restaurants = db.restaurants.find({$or:[{"address.zipcode":zipcode},
                                            {"grades.0.score":{$lt:score}}]})
    return restaurants

print(findRestBorough("Manhattan"))
print(findRestZip("10017"))
print(findRestZipGrade("10017", "B"))
print(findRestZipScore("10017", "20"))


    
